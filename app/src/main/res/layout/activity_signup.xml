<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D069700B"
    android:backgroundTint="#C6AC0B0B">

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="317dp"
            android:layout_height="39dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="36dp"
            android:text="SIGN UP PAGE"
            android:textAlignment="center"
            android:textColor="#0A0000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/signup_first_name"
        android:layout_width="139dp"
        android:layout_height="25dp"
        android:layout_marginTop="40dp"
        android:text="First Name"
        android:textColor="#0A0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_title" />

        <EditText
            android:id="@+id/signup_first_name_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_first_name" />

        <TextView
            android:id="@+id/signup_last_name"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:text="Last Name"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_first_name_value" />

        <EditText
            android:id="@+id/signup_last_name_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_last_name" />

        <TextView
            android:id="@+id/signup_email_ID"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:text="Email ID"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_last_name_value" />

        <EditText
            android:id="@+id/signup_email_ID_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_ID"/>

        <TextView
            android:id="@+id/signup_contact_Number"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:text="Contact Number"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_ID_value"
            app:layout_constraintVertical_bias="0.473"
             />

        <EditText
            android:id="@+id/signup_contact_Number_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="Contact Number"
            android:inputType="phone"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_contact_Number" />

        <TextView
            android:id="@+id/signup_create_Password"
            android:layout_width="207dp"
            android:layout_height="30dp"
            android:text="Create Password"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_contact_Number_value" />

        <EditText
            android:id="@+id/signup_create_Password_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_create_Password"/>

        <TextView
            android:id="@+id/signup_confirm_Password"
            android:layout_width="203dp"
            android:layout_height="34dp"
            android:text="Confirm password"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_create_Password_value" />

        <EditText
            android:id="@+id/signup_confirm_Password_value"
            android:layout_width="337dp"
            android:layout_height="31dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="#BFDADD"
            android:ems="10"
            android:foregroundTint="#00ACC1"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_confirm_Password" />

        <Button
            android:id="@+id/signup_submit"
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:text="SUBMIT"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_confirm_Password_value" />


    </androidx.constraintlayout.widget.ConstraintLayout>