<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/schedule_layout"
    android:stretchColumns="*">

    <TableRow android:layout_width="wrap_content">

        <TextView
            android:id="@+id/shift_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Shift Timings"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/employee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Employees Available"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/manager_prepare_schedule_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="#0A0000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow android:layout_width="wrap_content">
        <Spinner
            android:id="@+id/shift_timings1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/shift_timings_array"



            />
        <Spinner
            android:id="@+id/employee_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/employee_list_array"
            />

    </TableRow>
</TableLayout>